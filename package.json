{
  "name": "pyptron",
  "version": "0.0.0-development",
  "description": "Librer√≠a para el pico y placa en Colombia",
  "private": true,
  "main": "dist/api",
  "license": "MIT",
  "homepage": "https://bitbucket.org/archemiro/pyptron/src",
  "scripts": {
    "start": "node dist/api",
    "start:dev": "cross-env DEBUG=pyptron:* nodemon --exec babel-node src/api",
    "lint": "eslint src",
    "clean": "rimraf dist",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:ci": "JEST_JUNIT_OUTPUT=test-results/jest/results.xml jest --ci --coverage --testResultsProcessor=jest-junit",
    "prebuild": "npm run clean",
    "build": "babel --out-dir dist --ignore __tests__ src",
    "deploy:setup": "pm2 deploy production setup",
    "deploy": "pm2 deploy production"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "bugs": {
    "url": "https://bitbucket.org/archemiro/pyptron/issues",
    "email": "pyptron@pyphoy.com"
  },
  "keywords": [
    "Colombia",
    "Pico y placa"
  ],
  "directories": {
    "lib": "lib"
  },
  "author": "Mauricio Robayo <archemiro@gmail.com> (https://www.archemiro.com)",
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "debug": "^4.1.0",
    "express": "^4.16.4",
    "moment": "^2.22.2",
    "morgan": "^1.9.1",
    "pascua": "^1.1.3",
    "rimraf": "^2.6.2",
    "slugify": "^1.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.1.2",
    "@commitlint/config-conventional": "^7.1.2",
    "cross-env": "^5.2.0",
    "eslint": "^5.6.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-plugin-import": "^2.12.0",
    "husky": "^1.0.0-rc.14",
    "jest": "^23.6.0",
    "jest-junit": "^5.0.0",
    "lint-staged": "^7.3.0",
    "nodemon": "^1.18.4",
    "npm-run-all": "^4.1.3",
    "pm2": "^3.1.3",
    "prettier": "^1.14.3",
    "supertest": "^3.3.0"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@bitbucket.org/archemiro/pyptron.git"
  }
}
